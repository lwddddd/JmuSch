                        android:textColor="@color/tabtext"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/ltext7"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="if"
                        android:textSize="15sp"
                        android:textColor="@color/tabtext"
                        tools:ignore="HardcodedText" />
                </TableRow>
            </TableLayout>



    </LinearLayout>




</LinearLayout>